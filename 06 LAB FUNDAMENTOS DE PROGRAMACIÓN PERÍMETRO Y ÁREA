#include <iostream>
#include "conio.h"
using namespace std;

int main()
{
    float perimetro, area, radio, PI;
    PI=3.1416;
    cout<<"Introduzca el radio: "<<endl;
    cin>> radio;
    perimetro= 2*PI*radio;
    cout<<"El perímetro es: ";
    cout <<perimetro<<endl;
    area = PI*radio*radio;
    cout<<"El área es: ";
    cout<< area<<endl;

    return 0;
}
